@model Projeto_pimWEB.Models.Classes.Beneficio

@{
    ViewData["Title"] = "Inserir beneficio";
}

<h1>Inserir Beneficio</h1>

<h4>Beneficio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-route-id="@Model.Funcionario.id_cod_func" asp-action="CreateBeneficios" method="post">
            <input asp-for="Funcionarioid_cod_func" type="hidden" value="@Model.Funcionario.id_cod_func" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome_Ben" class="control-label"></label>
                <input asp-for="Nome_Ben" class="form-control" />
                <span asp-validation-for="Nome_Ben" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor" class="control-label"></label>
                <input asp-for="valor" class="form-control" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <button onclick="window.history.back()">Voltar</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}