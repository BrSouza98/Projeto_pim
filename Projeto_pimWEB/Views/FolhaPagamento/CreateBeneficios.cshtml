@model Projeto_pimWEB.Models.Classes.Beneficio

@{
    ViewData["Title"] = "Inserir beneficio";
}

<h1>Inserir Beneficio do funcionário(a):</h1>
<h2>@Model.Funcionario.Nome</h2>

<hr />
<div class="row d-flex justify-content-center m-auto mt-5">
    <div class="col-md-4 p-4 border border-dark rounded-3">
        <h3 class=" mb-3">Inserir benefício</h3>

        <form asp-route-id="@Model.Funcionario.id_cod_func" asp-action="CreateBeneficios" method="post">
            <input asp-for="Funcionarioid_cod_func" type="hidden" value="@Model.Funcionario.id_cod_func" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome_Ben" class="control-label">Nome do beneficio</label>
                <input asp-for="Nome_Ben" class="form-control" />
                <span asp-validation-for="Nome_Ben" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="valor" class="control-label">Valor</label>
                <input asp-for="valor" class="form-control" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-around">
                <div class="form-group">
                    <a style="width: 7rem;" class="btn btn-secondary mt-3" onclick="window.history.back()">Voltar</a>
            </div>
            <div class="form-group">
                    <input style="width: 7rem;" type="submit" value="Confirmar" class="btn btn-dark mt-3" />
            </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}