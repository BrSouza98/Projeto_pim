@model Projeto_pimWEB.Models.Classes.Dependente

@{
    ViewData["Title"] = "Adicionar Dependentes";
}

<h1 class="display-4 text-center">Adicionar dependente</h1>
<hr />

<div class="row d-flex justify-content-center m-auto mt-5">
    <div class="col-md-4 p-4 border border-dark rounded-3">
        <h3 class="mb-3">Dados do dependente</h3>

        <form asp-controller="Funcionario" asp-action="Create_depen" method="post">
            <input asp-for="funcionarioid_cod_func" class="d-none" value="@Model.funcionarioid_cod_func"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mb-3" >
                <label asp-for="DtNascimento" class="control-label">Data de nascimento</label>
                <input asp-for="DtNascimento" type="date" class="form-control" />
                <span asp-validation-for="DtNascimento" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Parentesco" class="control-label"></label>
                <input asp-for="Parentesco" class="form-control" />
                <span asp-validation-for="Parentesco" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-around">
                <a asp-controller="Funcionario" asp-route-id="@Model.funcionario.id_cod_func" asp-action="Registro_depen" role="button" class="btn btn-secondary botao">Voltar</a>
                <input type="submit" value="Adicionar" class="btn btn-dark botao" />
            </div>
        </form>
    </div>
</div>
